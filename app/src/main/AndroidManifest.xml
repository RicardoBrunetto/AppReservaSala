<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.reserva.reservadesalauem">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:label="Login" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MenuPrincipalActivity"
            android:label="@string/title_activity_menu_principal"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.CadastrarSalaActivity"
            android:label="@string/title_activity_cadastrar_sala"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.AlterarUsuarioActivity" />
        <activity android:name=".activities.RecuperarSenhaActivity" />
        <activity android:name=".activities.AlterarSenhaActivity"></activity>
    </application>

</manifest>