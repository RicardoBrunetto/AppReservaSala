<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logo"
        android:src="@drawable/logoapp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sou Professor"
            android:id="@+id/btnMainLogin"
            android:background="@drawable/btn_selector"
        style="@style/button_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sou aluno"
            android:id="@+id/btnMainEntrar"
            android:background="@drawable/btn_selector"
            style="@style/button_text"
            android:layout_below="@+id/btnMainLogin"
            android:layout_alignLeft="@+id/btnMainLogin"
            android:layout_alignStart="@+id/btnMainLogin"
            android:layout_alignRight="@+id/btnMainLogin"
            android:layout_alignEnd="@+id/btnMainLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status do Sistema"
        android:id="@+id/btnVerificaSistema"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/btnMainEsqueceuSenha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu sua senha?"
        android:id="@+id/btnMainEsqueceuSenha"
        android:textColor="@color/white"
        android:layout_below="@+id/btnMainEntrar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>
